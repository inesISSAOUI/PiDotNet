@model IEnumerable<Pidev.Domaine.Entities.Question>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Question</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QuizId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question1stSuggestion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question2ndSuggestion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question3rdSuggestion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionCorrectAnswer)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuizId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question1stSuggestion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question2ndSuggestion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question3rdSuggestion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionCorrectAnswer)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.QuestionId }) |
                @Html.ActionLink("Details", "Details", new { id = item.QuestionId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.QuestionId })
            </td>
        </tr>
    }

</table>
